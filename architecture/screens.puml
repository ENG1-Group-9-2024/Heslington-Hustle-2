    class EndScreen {
        - MAX_DAY_SCORE: float
        - MIN_DAY_SCORE: float


        + EndScreen(game: HeslingtonHustle, endGameState: GameState)
        + getDayScore(studyCount: int, mealCount: int, recreationCount: int): float
        + calculateExamScore(days: List<GameState.Day>): float

    }
